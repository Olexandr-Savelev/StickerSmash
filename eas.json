{
  "cli": {
    "version": ">= 8.0.0",
    "appVersionSource": "remote"
  },

  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "development"
      },
      "android": {
        "image": "latest"
      },
      "ios": {
        "image": "latest"
      }
    },

    "preview": {
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "preview"
      }
    },

    "production": {
      "autoIncrement": "true"
    }
  },

  "submit": {
    "production": {}
  }
}
